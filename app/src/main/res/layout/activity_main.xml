<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/background_color">

    <!-- Logo de l'application -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_todo_logo"
        android:layout_marginBottom="16dp"
        android:contentDescription="Logo de l'application" />

    <!-- Grand titre -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to To-Do List App"
        android:textSize="24sp"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Sous-titre -->
    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gérez vos tâches facilement et efficacement."
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Champ pour le nom d'utilisateur -->
    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nom d'utilisateur"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/edittextbackground"
        android:layout_marginBottom="12dp" />

    <!-- Champ pour le mot de passe -->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        android:drawableStart="@android:drawable/ic_lock_lock"
        android:padding="12dp"
        android:background="@drawable/edittextbackground"
        android:layout_marginBottom="8dp" />



    <!-- Bouton de connexion -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connexion"
        android:textStyle="bold"
        android:background="@drawable/button_primary"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp"
        android:padding="12dp" />

    <!-- Bouton d'inscription -->
    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="S'inscrire"
        android:background="@drawable/button_secondary"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="12dp" />

    <!-- ProgressBar (invisible au départ) -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="16dp" />

</LinearLayout>